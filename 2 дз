#include <algorithm>
#include <iostream>
#include <string>

using namespace std;

int digitCount(int integer) {
return (int) log10(integer);
}

int digitAt(int integer, int index) {
return integer / (int) pow(10, index) % 10;
}

int main() {
cout « "Enter count of numbers: ";
int numberCount;
cin » numberCount;
int palindromeCount = 0;
for(int numberIndex = 0; numberIndex < numberCount; numberIndex++) {
int number;
cin » number;

bool isPalindrome = true;
for(int digitIndex = 0; digitIndex < digitCount(number); digitIndex++) {
if(digitAt(number, digitIndex) != digitAt(number, digitCount(number) - 1)) {
isPalindrome = false;
break;
}
}

if(isPalindrome) palindromeCount++;
}

cout « "There are " « (palindromeCount == 0 ? "no" : std::to_string(palindromeCount)) « " palindromes" « std::endl;
return 0;
}
